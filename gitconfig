[core]
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore

[user]
  name = Joao F. Serejo
  email = jfserejo@gmail.com

[pack]
  threads = 0

[diff]
  renamelimit = 0

[push]
  default = current

[alias]
  ci = commit
  ca = commit -a
  co = checkout
  cob = checkout -b
  st = status
  lc = log ORIG_HEAD.. --stat --no-merges
  rrb = push origin

[color]
  branch = auto
  status = auto
  diff = auto
  ui = auto

[color "diff"]
    meta = yellow
    frag = cyan
    old = red
    new = green

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
